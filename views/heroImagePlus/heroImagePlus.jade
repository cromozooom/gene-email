extends ../../template/_cells

block cellAtribute
	- cell = 			"fullWidth"
	- template = 		"heroImagePlus"

block fullWidth
	block heroImagePlusInfo

	+normalCell("100%", "0", "0", "center")
		if debug
			p(style="color: #{colorDebug}; background: #{colorBgDebug}; padding: 5px;")
				| #{template}, #{headerFontSize}, #{heroImagePlusBgColor}
		table(width="100%" border="0" cellpadding="0" cellspacing="0" style="width: 100%;" bgcolor="#{heroImagePlusBgColor}")
			tr
				td(valign="top" align="center" width="100%" style="width: 100%; padding: #{heroImagePlusHeaderPadding};")
					a(href="#{linkCTA}#{prefixTraking}#{data}#{lang}_#{trakingSource}_#{sufixTraking}" style="#{headerFontSize}#{fontSans}#{bold}#{decNone} color:#{heroImagePlusHeaderColor};")
						span(style="#{headerFontSize}#{fontSans}#{bold}#{decNone} color:#{heroImagePlusHeaderColor};")
							| #{rowHeaderTitle}
			tr
				td(valign="top" align="center" width="100%" style="width: 100%; padding: #{heroImagePlusRowPadding};")
					span(style="padding: #{heroImagePlusRowPadding};#{rowFontSize}#{fontSans} color:#{heroImagePlusRowColor};")
						| #{rowHeaderRow}