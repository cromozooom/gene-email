extends ../../template/_cells

block cellAtribute
	- cell = 			"fullWidth"
	- template = 		"couponCode"

block fullWidth
	block couponCodeInfo
	+normalCell("100%", "0", "0", "center")
		if debug
			p(style="color: #{colorDebug}; background: #{colorBgDebug}; padding: 5px;")
				| #{coupon}
		table(width="100%" border="0" cellpadding="0" cellspacing="0" style="width: 100%;" bgcolor="#{couponCodeBgColor}")
			if rowHeaderTitle
				tr
					td(valign="top" align="center" width="100%" style="width: 100%; padding: #{couponCodeHeaderPadding};")
						a(href="#{linkCTA}#{prefixTraking}#{data}#{lang}_#{trakingSource}_#{sufixTraking}" style="#{headerFontSize}#{fontSans}#{bold}#{decNone} color:#{couponCodeHeaderColor};")
							span(style="#{headerFontSize}#{fontSans}#{bold}#{decNone} color:#{couponCodeHeaderColor};")
								| #{rowHeaderTitle}
			tr
				td(valign="top" align="center" width="100%" style="width: 100%; padding: #{couponCodeCouponPadding};")
					span(style="#{center}#{fontSans} color:#{fontColor};")
						center
							table(cellpadding="10" cellspacing="0" border="0" bgcolor="#{couponCodeBgColor}")
								tr
									td(style="border: 3px solid #{borderCoupon};")
										span(style="#{CouponFontSize} #{fontSans} color:#{borderCoupon};")
											| #{coupon}

			if rowHeaderRow
				tr
					td(valign="top" align="center" width="100%" style="width: 100%; padding: #{couponCodeCouponPadding};")
						span(style="padding: #{couponCodeRowPadding};#{rowFontSize}#{fontSans} color:#{couponCodeRowColor};")
							| #{rowHeaderRow}