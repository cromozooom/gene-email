block mixin
	mixin backgroundTable(border, padding, align)
		table(cellpadding="0" cellspacing="0" border="#{border}" id="backgroundTable-fix-g" style="padding: #{padding};" align="#{align}")
			tr
				td
					block
	mixin wrapperTable(width, align)
		table.wrapper(align="#{align}" cellpadding="0" cellspacing="0" border="0" width="#{width}" style="border-collapse:collapse; mso-table-lspace:0pt; mso-table-rspace:0pt; width: #{width} + px; border: 1px solid #e1e1e1;")
			block
	mixin normalTable
		table(width="100%" border="0" cellspacing="0" cellpadding="0")
			block

	//- mixin tdSpace(x, y, visible)
		td(width="#{x}px" height="#{y}px" class="#{visible}")
			img(src="../../assets/images/fix/spacer.gif" width="#{x}px" height="#{y}px" alt="")

	mixin tdSpace(x, y, visible)
		td(width="#{x}px" height="#{y}px" class="#{visible}" style="font-size: 1px;") &nbsp;
			

	mixin arrowImage(src, alt)
		img(alt="" src="../../assets/images/fix/#{src}" border="0" style="outline: none; text-decoration: none; border: none;")
		block

	mixin linkImage(src, href, alt)
		a(hreg="#{href}")
			img(src="../../assets/images/fix/#{src}" alt="#{alt}" border="0" style="border:none; display:block; outline:none; text–decoration:none; color: #333333; font: bold 12px Helvetica, Arial, sans–serif; width: 100%; max-width: 100%; height: auto;")

	mixin linkImageBrand(src, href, alt, width )
		a(hreg="#{href}")
			img(src="../../assets/images/fix/#{src}" alt="#{alt}" border="0" style="border:none; display:block; outline:none; text–decoration:none; color: #333333; font: bold 12px Helvetica, Arial, sans–serif; width: #{width}; max-width: #{width}; height: auto;")
	mixin menuItem(item, itemLink)
		td.itemMenu(align="left")
			a(href="#{itemLink}")
				span #{item}
	mixin button(copy, fontSize, xyPadding, href, width, bg, color)
		table(bgcolor="#{bg}" cellpadding="0" cellspacing="0" border="0" width="#{width}" style="border-collapse:collapse")
			tr
				td(align="center" style="color:#fefefe;padding:#{xyPadding};font:bold #{fontSize} Helvetica,Arial,sans-serif;white-space:nowrap")
					a(href="#{href}" style="color:#{color};text-decoration:none" target="_blank") #{copy}
						block

