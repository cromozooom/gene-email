		- rowHeaderRow					= false

		- linkCTA						= "http://www.solopx.com"

		//- want a button?
		- button = true
		- button = false

		// Copy for CTA (txt)
		- ctaCopy  						= "ACQUISTA ORA"

	//- use this block for cutomize option like font size and padding
	block heroImagePlusSetup

		- heroImagePlusHeaderPadding 		= "10px 0px 10px 0px"
		- headerFontSize 					= font16
		- heroImagePlusRowPadding 			= "0px 0px 20px 0px"
		- rowFontSize 						= font14
		- heroImagePlusButtonPadding 		= "0px 0px 20px 0px"


	include ../config/config


