extends heroImagePlus/heroImagePlus
block append heroImagePlusInfo
	- trakingSource 					= "HeroImagePlusTest"
	// optional "dark", "light", "white" theme
	- theme 							= "light"


	if lang == "en"

		//- Copy for the first row (txt)
		- rowHeaderTitle 				= false
		- rowHeaderTitle 				= "WINTER COLLECTION"

		// Copy for the second row (txt) - this is optional if you dont want to use it put False instead
		- rowHeaderRow					= "Tornando alla serie A, prezzi bloccati e un finanziamento a tasso zero"
		- rowHeaderRow					= false

		//- this is the link for all the block !!!
		- linkCTA						= "http://www.solopx.com/HeroImagePlus1Link"

		//- want a button?
		- button = true
		- button = false


		// Copy for CTA (txt)
		- ctaCopy 						= "BUY NOW"




	if lang == "it"
